@model HobbyMood.Models.ExperienceDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<p>Are you sure you want to delete this experience?</p>
<p><strong>@Model.ExperienceName</strong> - @Model.ExperienceDate.ToShortDateString()</p>

<form asp-action="Delete" asp-route-id="@Model.ExperienceId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
