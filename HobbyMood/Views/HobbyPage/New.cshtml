@model HobbyMood.Models.HobbyDto

@{
    ViewData["Title"] = "Add New Hobby";
}

<h1>Add New Hobby</h1>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="HobbyName" class="control-label"></label>
        <input asp-for="HobbyName" class="form-control" />
        <span asp-validation-for="HobbyName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Add Hobby" class="btn btn-primary" />
    </div>
</form>

<div class="mt-3">
    <a asp-action="List">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
