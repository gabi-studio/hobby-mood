@model HobbyMood.Models.HobbyDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<p>Are you sure you want to delete this hobby?</p> 
<p><strong>@Model.HobbyName</strong>?</p>

<form asp-action="Delete" asp-route-id="@Model.HobbyId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
