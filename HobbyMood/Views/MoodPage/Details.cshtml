@model HobbyMood.Models.ViewModels.MoodDetails

@{
    ViewData["Title"] = "Mood Details";
}

<h1>@Model.Mood.MoodName</h1>

<h3>Statistics</h3>
<ul>
    <li>Total Experiences: @Model.Mood.MoodExperienceCount</li>
</ul>

<h3>Experiences Associated with This Mood</h3>
<ul>
    @foreach (var experience in Model.RelatedExperiences)
    {
        <li>
            <p>@experience.ExperienceDate.ToString("MMMM dd, yyyy") - <a href="/ExperiencePage/Details/@experience.ExperienceId">@experience.ExperienceName</a></p>
        </li>
    }
</ul>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Mood.MoodId" class="btn btn-warning">Edit</a>
    <a asp-action="ConfirmDelete" asp-route-id="@Model.Mood.MoodId" class="btn btn-danger">Delete</a>
    <a asp-action="List" class="btn btn-secondary">Back to List</a>
</div>
