@model HobbyMood.Models.MoodDto

@{
    ViewData["Title"] = "Confirm Delete";
}

<h1>Confirm Delete</h1>

<p>Are you sure you want to delete this mood?</p>
<p><strong>@Model.MoodName</strong>?</p>

<form asp-action="Delete" asp-route-id="@Model.MoodId" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="List" class="btn btn-secondary">Cancel</a>
</form>
