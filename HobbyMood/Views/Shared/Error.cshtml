@model HobbyMood.Models.ViewModels.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error</h1>
<h2 class="text-danger">An error occurred while processing</h2>

@if (Model.Errors.Count() > 0)
{
    <ul>>
        @foreach (var error in Model.Errors)
        {
            <li>@error</li>
        }
    </ul>
}